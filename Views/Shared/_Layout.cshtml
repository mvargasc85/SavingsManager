<!DOCTYPE html>
<html>

    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")


    </head>

    <body>
        @Html.Hidden("savingsAction", (string)ViewBag.SavingsAction)

        <div class="navbar navbar-inverse navbar-fixed-top">


            <div class="container">

                <div class="navbar-collapse collapse">
                    <div style="text-align: right;">       
                    </div>
                    @Html.Partial("_LoginPartial")
                    <ul id="Menu1">
                        <li><a href="../Home"> Inicio </a></li>
                        <li>
                            Grupos
                            <ul>
                                <li>@Html.ActionLink("Crear Nuevo Grupo", "NuevoGrupo", "Group")</li>
                                <li>@Html.ActionLink("Ver Grupos", "VerGrupos", "Group")</li>
                            </ul>
                        </li>
                        <li>
                            Asociados
                            <ul>
                                <li>@Html.ActionLink("Registrar Nuevo Asociado", "NuevoSocio", "Socio")</li>
                                <li>@Html.ActionLink("Ver Asociados", "VerSocios", "Socio")</li>
                            </ul>
                        </li>
                        <li>
                            Planes
                            <ul>
                                <li>@Html.ActionLink("Crear Nuevo Plan", "NuevoPlan", "Plan")</li>
                                <li>@Html.ActionLink("Ver Planes", "VerPlanes", "Plan")</li>
                            </ul>
                        </li>
                        <li>
                            Ahorro
                            <ul>
                                <li>@Html.ActionLink("Registrar aporte a Ahorro", "NuevoAhorro", "Ahorro")</li>
                                <li>@Html.ActionLink("Ver Ahorros", "VerAhorros", "Ahorro")</li>
                            </ul>
                        </li>
                        <li>
                            Reportes
                            <ul>
                                <li>@Html.ActionLink("Estados de Cuenta por Grupo", "VerReporte", "Report")</li>
                                @*<li>@Html.ActionLink("Estados de Cuenta por Asociado", "EstadoCuentaSocio", "Home")</li>*@
                            </ul>
                        </li>
                    </ul>

                </div>

            </div>
        </div>
        
        <div id="notificationDiv" style="display:none"></div>
        <div class="container body-content">
            <br /><br />

            @RenderBody()
            <hr />



        </div>
      

         <footer id="footer">
            <p>Savings Manager &copy; - @DateTime.Now.Year</p>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/kendo")
        @Scripts.Render("~/bundles/savings")
        @RenderSection("scripts", required: false)
    </body>
  
</html>
