@using Microsoft.AspNet.Identity
@*@if (Request.IsAuthenticated)*@
@if (@HttpContext.Current.Session["SessionIniciada"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hola " + @HttpContext.Current.Session["SessionIniciada"].ToString() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">

        @*<li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}


@*@if (@HttpContext.Current.Session["SessionIniciada"] != null)
{
    <font size=2 color='##008000'>Sesión de usuario iniciada: @HttpContext.Current.Session["SessionIniciada"].ToString()</font>
}
else
{
    <font size=2 color='#FF0000'>No puede acceder a la aplicación si no a iniciado sesión</font>
}*@