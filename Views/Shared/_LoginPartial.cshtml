@using Microsoft.AspNet.Identity
@*@if (Request.IsAuthenticated)*@
@if (@HttpContext.Current.Session["SessionIniciada"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hola " + @HttpContext.Current.Session["SessionIniciada"].ToString() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">

        @if (@HttpContext.Current.Session["SessionIniciada"] != null)
        {
            <li>@Html.ActionLink("Cerrar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        }
        else
        {
            <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        }

    </ul>
}